<mvc:View controllerName="gtsample.controller.View1" xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content >
            <Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto" >
                <content>
                    <Button
                        id="helloDialogButton"
                        text="{i18n>openDialogButtonText}"
                        press=".onOpenDialog"
                        class="sapUiSmallMarginEnd"
                    />
                    <Button
                        id="helloDialogBtn"
                        text="{i18n>openDialogButtonTextP}"
                        press=".onOpenDialogP"
                        class="sapUiSmallMarginEnd"
                    />
                </content>
            </Panel>

            <Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto" >
                <content>
                    <Button
                        text="Dialog"
                        class="sapUiSmallMarginBottom"
                        ariaHasPopup="Dialog" />
                    <Button
                        text="Dialog (Fixed Size)"
                        class="sapUiSmallMarginBottom"
                        ariaHasPopup="Dialog" />
		
                </content>
            </Panel>          
        </content>
    </Page>
</mvc:View>
